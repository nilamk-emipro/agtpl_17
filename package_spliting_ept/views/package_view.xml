<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_package_splitting_form">
        <field name="name">package.spliting.barcode</field>
        <field name="model">package.spliting.barcode</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <form string="package_details" method="POST" action='cut_and_generate'>>
                <input type="hidden" name="Name" t-att-value="context.get('name', False)"/>
                <input type="hidden" name="Package" t-att-value="context.get('package', False)"/>
                <input type="hidden" name="Product" t-att-value="context.get('product', False)"/>
                <input type="hidden" name="Lot Number" t-att-value="context.get('lot', False)"/>
                <input type="hidden" name="Available Quantity" t-att-value="context.get('quantity', False)"/>
                <input type="hidden" name="Quantity To Cut" t-att-value="context.get('uom', False)"/>
                <div class="row">
                    <div class="mx-auto">
                        <button type='button' class='btn btn-primary text-uppercase o_generate_picking' name='generate_picking'>Split Package
                        </button>
                    </div>
                </div>
            </form>
        </field>
    </record>

</odoo>