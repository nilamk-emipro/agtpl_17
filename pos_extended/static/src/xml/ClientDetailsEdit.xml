<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div class="client-detail">
                <script type="text/javascript" src="/pos_extended/static/src/custom_js.js"></script>
                <span class="label">Company Type</span>
                <div class="custom-control custom-checkbox">
                    <field name="company_type" widget="radio" options="{'horizontal': true}"/>
                    <h1 style="display: flex;margin: 0px 0px 10px 83px;max-width: 150px;">
                        <input type="radio" id="individual" name="company_type" t-on-change="captureChange"
                               class="custom-control-input"
                               value="person" t-att-checked="props.partner.is_company == false ? 'checked' : undefined"
                        />Individual
                        <input type="radio" id="company" name="company_type" t-on-change="captureChange"
                               class="custom-control-input" value="company"
                               t-att-checked="props.partner.is_company == true ? 'checked' : undefined"
                        />Company
                    </h1>
                </div>
            </div>
            <div class="client-detail">
                <span class="label">Mobile</span>
                <input class="detail client-mobile" name="mobile" t-on-change="captureChange"
                       t-att-value="props.partner.mobile || ''"
                       placeholder="Mobile"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">GST Treatment</span>
                <select name="l10n_in_gst_treatment" class="detail client-gst_treatment" t-on-change="captureChange">
                    <option value="regular"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'regular' ? 'selected' : undefined">Registered Business - Regular</option>
                    <option value="composition"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'composition' ? 'selected' : undefined">Registered Business - Composition</option>
                    <option value="unregistered"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'unregistered' ? 'selected' : undefined">Unregistered Business</option>
                    <option value="consumer"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'consumer' ? 'selected' : undefined">Consumer</option>
                    <option value="overseas"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'overseas' ? 'selected' : undefined">Overseas</option>
                    <option value="special_economic_zone"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'special_economic_zone' ? 'selected' : undefined">Special Economic Zone</option>
                    <option value="deemed_export"
                            t-att-selected="props.partner.l10n_in_gst_treatment == 'deemed_export' ? 'selected' : undefined">Deemed Export</option>
                </select>
            </div>
            <div class="client-detail hide_title">
            <span class="label">Title</span>
                <select name="title" class="detail client-title" t-on-change="captureChange">
                    <option value="1"
                            t-att-selected="props.partner.title == '1' ? 'selected' : undefined">Madam</option>
                    <option value="2"
                            t-att-selected="props.partner.title == '2' ? 'selected' : undefined">Miss</option>
                    <option value="3"
                            t-att-selected="props.partner.title == '3' ? 'selected' : undefined">Mister</option>
                    <option value="4"
                            t-att-selected="props.partner.title == '4' ? 'selected' : undefined">Doctor</option>
                    <option value="5"
                            t-att-selected="props.partner.title == '5' ? 'selected' : undefined">Professor</option>
                </select>
            </div>
        </xpath>
    </t>
</templates>